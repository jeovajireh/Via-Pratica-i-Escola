<div id="wrapper">
  <div id="top_logo">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <% if FileTest.exists?("#{RAILS_ROOT}/public/uploads/image/institute_logo.jpg") %>
      <%= image_tag  "/uploads/image/institute_logo.jpg" ,:width => "155",  :height=>"107" %>
    <% else %>

    <img src="/images/application/logovp.png"/>
    <% end %>
  </div>

  <div id="help_top">
    <div id="help_link"><a href="http://www.viapratica.com.br" target="_blank">Ajuda!</a></div>
  </div>

  <div id="login_area_bg">

    <% form_for :user do |form| %>

      <div id="login_area">
        <label for="username">Usuário</label>
        <div id="username_textbox_bg">
          <%= form.text_field :username,
            :maxlength => 20%>
        </div>

        <label for="password">Senha</label>
        <div id="password_textbox_bg">
          <%= form.password_field :password %>
        </div>

        <div id="checkbox_area">
          <input type="checkbox" id="remember" />
          <label for="remember">Lembrar conta</label>
        </div>

        <div id="submit_area">
          <%= submit_tag "Entrar", :class => "submit" %>
        </div>


        <% if !flash.empty? %>
          <div id="notice"><%= flash[:notice] %></div>
        <% end %>

      </div>
    </div>
  <% end %>
  <div id="help_forgot_pw">
    <%= link_to "Help! I've Forgotten my Password?",
      :controller => "user",
      :action => "forgot_password" %>

</div>
<div class="clearfooter"></div>
</div>

    <div id="footer">
      <div id="footer_logo">
            <div id="powered_by">
          Implanted by <a href="http://www.viapratica.com.br/" target="_blank">Via Prática</a>
        </div>
          <a href="http://www.viapratica.com.br/" target="_blank" class="footer-logo"></a>
          
      </div>
    </div>

<script type="text/javascript">
document.getElementById('user_username').focus();
 </script>
